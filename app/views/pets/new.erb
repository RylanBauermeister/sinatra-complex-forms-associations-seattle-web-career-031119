<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="pet[name]">Name:</label>
  <input id="pet_name" type="text" name="pet[name]">
  <label for="owner_name">Owner:</label>
  <br>
    <%@owners.each do |owner|%>
      <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id='<%=owner.id%>'><%=owner.name%></input>
    <%end%>
    <br>

  <p>or create a new owner:</p>
  <label for="owner[name]">Name:</label>
  <input type="text" id="owner_name" name="owner[name]">
  <!-- </select> -->
  <input type="submit" value="Create Pet">
</form>
